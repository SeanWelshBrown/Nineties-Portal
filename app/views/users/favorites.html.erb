    <a href="<%= song.external_link_2 %>">Watch the music video for <%=song.title%> on YouTube</a>
    <%= form_for :user_favorite, url: remove_from_favorites_path, method: :delete do |f| %>
      <%= f.hidden_field :song_id, value: song.id %>
      <%= f.submit value: "Remove from Favorites" %>
    <% end %>
    </div>
  <% end %>
</div>

