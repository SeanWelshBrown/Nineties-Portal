<h1><%= @logged_in_user.username %>'s favorite 90s stuff</h1>

<h2>Favorite 90s Movies:</h2>

<div class="index-container">
  <% @favorite_movies.each do |movie| %>
  <div class="index-tile">
    <img src="<%=movie.img_url%>">
    <p>Title: <%= movie.title %></p>
    <p>Genre: <%= movie.genre %></p>
    <p>Box Office: <%= movie.box_office %></p>
    <p>Description: <%= movie.description %></p>
    <a href="<%= movie.external_link_1 %>">Learn more about <%=movie.title%> on Wikipedia</a><br>
    <a href="<%= movie.external_link_2 %>">Watch the trailer for <%=movie.title%> on YouTube</a>
    <%= form_for :user_favorite, url: remove_from_favorites_path, method: :delete do |f| %>
      <%= f.hidden_field :movie_id, value: movie.id %>
      <%= f.submit value: "Remove from Favorites" %>
    <% end %>
  </div>
  <% end %>
</div>

