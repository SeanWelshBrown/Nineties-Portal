<h1>Create an Account</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <h2><%= message %></h2>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label "Enter a username:" %>
  <%= f.text_field :username %>
  <%= f.submit value: "Create Account" %>
<% end %>

<br>

<h2>Already have an account? <%= link_to 'Click here to log in!', login_path %></h2>

</div>