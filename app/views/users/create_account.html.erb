<div class="enter-info-page">

<h1>Create an Account</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <h2><%= message %></h2>
  <% end %>
<% end %>

  <div class="enter-info-form">
  <%= form_for @user do |f| %>
    <%= f.label "Enter a username:" %>
    <%= f.text_field :username %>
    <%= f.submit value: "Create Account" %>
  <% end %>
  </div>

<h2>Already have an account? <%= link_to 'Click here to log in!', login_path %></h2>

</div>